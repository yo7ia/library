<?xml version="1.0" encoding="utf-8"?>
 
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_child"
        android:background="@drawable/favorite_bk"
        >

    <CheckedTextView
        android:id="@+id/list_item_text_child"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
      android:textColor="@android:color/black"
        android:checkMark="@drawable/checkbox"
        android:checked="false"

        android:textSize="12sp"
     android:paddingRight="20dp"
     android:paddingLeft="30dp"
     android:paddingTop="5dp"
     android:paddingBottom="5dp"
        android:gravity="center_vertical"
         />

    <TextView
        android:id="@+id/list_item_text_child2"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
       android:layout_below="@+id/list_item_text_child"
        android:gravity="center_vertical" 
        android:visibility="invisible"/>

</RelativeLayout>